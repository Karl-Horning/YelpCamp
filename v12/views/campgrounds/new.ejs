<% include ../partials/header %>

<div class="container">
    <h1 class="mb-5">Create a New Campground</h1>

    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label for="name">Campground Name</label>
            <input class="form-control form-control-lg" type="text" name="name" id="name" placeholder="name">
        </div>
        <div class="form-group">
            <label for="price">Campground Price</label>
            <input class="form-control form-control-lg" type="number" name="price" id="price" placeholder="9.99" min="0.01"
                step="0.01">
        </div>
        <div class="form-group">
            <label for="image">Campground Image</label>
            <input class="form-control form-control-lg" type="text" name="image" id="image" placeholder="image">
        </div>
        <div class="form-group">
            <label for="description">Campground Description</label>
            <input class="form-control form-control-lg" type="text" name="description" id="description" placeholder="description">
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block my-5">Add New Campground</button>
    </form>

    <hr class="my-5">

    <p>
        <a href="/campgrounds">Go back to the Campgrounds page</a>
    </p>
</div>


<% include ../partials/footer %>