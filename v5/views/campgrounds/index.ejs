<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1 class="display-4">Welcome to YelpCamp!</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg mt-3" href="new">Add New Campground</a>
        </p>
    </header>

    <div class="row mb-5">
        <% campgrounds.forEach(campground => { %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail mb-4">
                <img class="img-fluid" src="../img/<%= campground.image %>" alt="An image of <%= campground.name %>">
                <div class="caption text-center">
                    <%= campground.name %>
                </div>
                <p>
                    <a class="btn btn-primary btn-block mt-5" href="/campgrounds/<%= campground._id %>">More Info</a>
                </p>
            </div>
        </div>
        <% }) %>
    </div>

</div>


<% include ../partials/footer %>