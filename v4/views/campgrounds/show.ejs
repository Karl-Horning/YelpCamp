<% include ../partials/header %>

<div class="container">
    <h1>
        <%= campground.name %>
    </h1>
    <p>
        <img class="img-fluid" src="../../img/<%= campground.image %>" alt="An image of <%= campground.name %>">
    </p>
    <p>
        <%= campground.description %>
    </p>

    <% campground.comments.forEach(comment => { %>
    <p>
        <strong>
            <%= comment.author %></strong>:
        <%= comment.text %>
    </p>
    <% }) %>

    <p>
        <a class="btn btn-primary btn-lg mt-3" href="/campgrounds/<%= campground._id %>/comments/new">Add a Comment</a>
    </p>
</div>

<% include ../partials/footer %>