<% include ../partials/header %>

<div class="container">
    <h1 class="mb-5">Edit
        <%= campground.name %>
    </h1>

    <form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Campground Name</label>
            <input class="form-control form-control-lg" type="text" name="name" id="name" placeholder="name" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <label for="image">Campground Image</label>
            <input class="form-control form-control-lg" type="text" name="image" id="image" placeholder="image" value="<%= campground.image %>">
        </div>
        <div class="form-group">
            <label for="description">Campground Description</label>
            <input class="form-control form-control-lg" type="text" name="description" id="description" placeholder="description" value="<%= campground.description %>">
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block my-5">Save Changes</button>
    </form>

    <hr class="my-5">

    <p>
        <a href="/campgrounds">Go back to the Campgrounds page</a>
    </p>
</div>


<% include ../partials/footer %>